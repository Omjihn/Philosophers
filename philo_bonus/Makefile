NAME = philo_bonus

DRAW = "  _____  _     _ _                       _                   \n |  __ \| |   (_) |                     | |                  \n | |__) | |__  _| | ___  ___  ___  _ __ | |__   ___ _ __ ___ \n |  ___/| '_ \| | |/ _ \/ __|/ _ \| '_ \| '_ \ / _ \ '__/ __|\n | |    | | | | | | (_) \__ \ (_) | |_) | | | |  __/ |  \__ \\n |_|    |_| |_|_|_|\___/|___/\___/| .__/|_| |_|\___|_|  |___/\n | |                              | |                        \n | |__   ___  _ __  _   _ ___     |_|                        \n | '_ \ / _ \| '_ \| | | / __|                               \n | |_) | (_) | | | | |_| \__ \                               \n |_.__/ \___/|_| |_|\__,_|___/     By gbricot\n"

SRC =	src/

OBJ = $(SRC:.c=.o)

CC = gcc

CFLAGS = -Wall -Wextra -Werror

$(NAME): draw
	$(CC) $(OBJ) -pthread -o $(NAME)

all: name

clean:
	rm -f $(OBJ)

fclean: clean
	rm -f $(NAME)

draw:
	@echo $(DRAW)

re: fclean all
